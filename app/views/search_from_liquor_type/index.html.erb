<% content_for :title, 'お酒から探す' %>

<div class="h-screen w-screen bg-gradient-to-r from-rose-400 bg-cover">
  <h1 class="pt-16 pl-10 text-gray-600 text-base font-semibold sm:text-3xl md:text-3xl lg:text-4xl xl:text-4xl">🥃 興味のあるお酒を選んでください 🍶</h1>

  <div class="content-center">
    <div class="grid grid-cols-4 gap-4 justify-center m-12">
      <button class="bg-yellow-300 hover:bg-yellow-200 text-base sm:text-base md:text-2xl lg:text-3xl xl:text-3xl text-white font-bold py-4 px-6 rounded-full hover:text-white hover:shadow-sm hover:translate-y-0.5 transform transition">
        <%= link_to "ビール", breweries_path(q: { liquor_type_eq: 0 }) %>
      </button>
      <button class="bg-pink-500 hover:bg-pink-400 text-base sm:text-base md:text-2xl lg:text-3xl xl:text-3xl text-white font-bold py-4 px-6 rounded-full hover:text-white hover:shadow-sm hover:translate-y-0.5 transform transition">
        <%= link_to "ワイン", breweries_path(q: { liquor_type_eq: 1 }) %>
      </button>
      <button class="bg-teal-400 hover:bg-teal-300 text-base sm:text-base md:text-2xl lg:text-3xl xl:text-3xl text-white font-bold py-4 px-6 rounded-full hover:text-white hover:shadow-sm hover:translate-y-0.5 transform transition">
        <%= link_to "日本酒", breweries_path(q: { liquor_type_eq: 2 }) %>
      </button>
      <button class="bg-orange-500 hover:bg-orange-400 text-base sm:text-base md:text-2xl lg:text-3xl xl:text-3xl text-white font-bold py-4 px-6 rounded-full hover:text-white hover:shadow-sm hover:translate-y-0.5 transform transition">
        <%= link_to "ウイスキー", breweries_path(q: { liquor_type_eq: 3 }) %>
      </button>
    </div>
    <div class="grid grid-cols-4 gap-4 justify-center m-12">
          <div class="object-cover"><%= image_tag "beer.jpg" %></div>
          <div class="object-cover"><%= image_tag "wine.jpg" %></div>
          <div class="object-cover"><%= image_tag "sake.jpg" %></div>
          <div class="object-cover"><%= image_tag "whiskey.jpg" %></div>
    </div>
  </div>
</div>
